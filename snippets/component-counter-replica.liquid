<custom-counter
  data-variant-id="{{ variant.id }}"
  data-quantity="{{ variant.quantity }}"
  data-max-quantity="{{ variant.max_quantity }}"
  data-min-quantity="{{ variant.min_quantity }}"
  data-step="{{ variant.step }}"
  data-disabled="{{ variant.available }}"
>
  <div class="counter-wrapper">
    <div class="counter">
      <button
        aria-label="{{ 'aria-label.component-counter-counter-decrease' | t }}"
        type="button"
        class="js-counter-decrease"
      >
        {% render 'icons', id: 'minus' %}
      </button>
      <input
        type="text"
        name="quantity"
        value="1"
        min="1"
        max="999"
        class="js-counter-quantity"
        aria-label="{{ 'aria-label.component-counter-counter-quantity' | t }}"
      >
      <button
        aria-label="{{ 'aria-label.component-counter-counter-increase' | t }}"
        type="button"
        class="js-counter-increase"
      >
        {% render 'icons', id: 'plus' %}
      </button>
    </div>
  </div>
</custom-counter>
